<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/index.css">

</head>
<body>
  <% if(currentUser){ %>
    <li><a href="/users/<%= currentUser._id %>/edit">signed in as <%= currentUser.firstName %></a></li>
    <li><a href="/logout">logout</a></li>
  <% } %>

  <h1><span class="talk">TALK</span> <span class="ml">My langugage</span></h1>
  <p class="tagline">
    practice your second language with native speakers
  </p>
    <div class="login-wrapper">
      <form class="login-form" action="/login" method="post">
        <div class="faux-textinput">
          <input type="text" class="email input" name="username" autocomplete="off" placeholder="enter your email" autofocus>
          <div class="reveal-div">
            <input type="password" class="password input" name="password" placeholder="enter your password">
          </div>
        </div>
        <button type="button" class="signup-btn" tabindex="0"><span class="signup-text">sign up!</span><span class="login">log in!</span></button>
      </form>
      <div class="clicker">
        <div class="text-container">
          <div class="cancel-container">
            <div class="cancel-text-container">
              <span class="cancel-text">cancel</span>
            </div>
          </div>
          <div class="login-container">
            <div class="login-text-container active">
              <span class="login-text">log in</span>
            </div>
          </div>
        </div>
      </div>
    </div>

<script type="text/javascript" src="/scripts/index.js"></script>
<% include ../partials/footer %>
